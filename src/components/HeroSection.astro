---
// Hero Section Component
---

<section class="relative h-[90vh] overflow-hidden bg-white">
    <div class="absolute inset-0 z-0">
        <div class="relative h-full w-full">
          <video 
            class="h-full w-full object-cover"
            autoplay 
            loop 
            muted 
            playsinline
          >
            <source src="/video_unior2.mp4" type="video/mp4" />
          </video>
          <div class="absolute inset-0 bg-black/50"></div>
          <div class="absolute inset-0 bg-primary/10 mix-blend-multiply"></div>
        </div>
      </div>
    </div>
    
    <div class="relative z-10 flex h-full items-center justify-center px-4">
      <div class="text-center">
        <h1 class="mb-6 text-5xl font-bold text-white md:text-7xl">
          Universidad Privada de Oruro
        </h1>
        <p class="mb-8 text-xl text-white/90 md:text-2xl">
          Formando profesionales de excelencia para el futuro
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="/admisiones" 
            class="rounded-full bg-primary px-8 py-3 text-lg font-semibold text-white transition hover:bg-primary-light/90"
          >
            Admisiones 2024
          </a>
          <a 
            href="/carreras" 
            class="rounded-full border-2 border-primary-light bg-transparent px-8 py-3 text-lg font-semibold text-white transition hover:bg-primary-light hover:text-black"
          >
            Explorar Carreras
          </a>
        </div>
      </div>
    </div>
  </section>