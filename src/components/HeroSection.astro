<style>
  /* Animaciones personalizadas para Tailwind CSS */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes pulseSlow {
    0%, 100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.03);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-scale-in {
    animation: scaleIn 0.7s ease-out forwards;
    opacity: 0;
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s infinite ease-in-out;
  }

  .floating-btn {
    animation: slideInRight 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Retrasos para las animaciones */
  .animation-delay-0-5s {
    animation-delay: 0.3s;
  }
  .animation-delay-1s {
    animation-delay: 0.6s;
  }
  .animation-delay-1-5s {
    animation-delay: 0.9s;
  }
  .animation-delay-2s {
    animation-delay: 1.2s;
  }

  /* Responsive adjustments (hidden by default on small screens) */
  @media (max-width: 767px) { /* Tailwind's 'md' breakpoint is 768px, so hidden for <md */
    .floating-btn {
      display: none !important; /* Use !important if Tailwind's flex is overriding */
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Especificamos el tipo HTMLElement para que TypeScript sepa que tiene 'dataset' y 'style'
    const floatingBtns = document.querySelectorAll<HTMLElement>('.floating-btn');

    floatingBtns.forEach((btn) => { // 'index' no se usa, lo podemos quitar si preferimos
      // Usamos '|| '0'' para asegurar que parseFloat siempre reciba una cadena válida
      const delay = parseFloat(btn.dataset.delay || '0');
      // Aseguramos que la animación comience después de un segundo para que el hero principal cargue
      btn.style.animationDelay = `${delay + 1}s`;
    });
  });
</script>
