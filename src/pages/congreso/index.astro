---
// src/pages/congreso.astro
import Layout from "../../layouts/Layout.astro"; // Asumiendo que tienes un layout base; si no, crea uno simple
---

<Layout title="I Congreso Nacional de Gastronomía y Alta Cocina">
  <html lang="es">
    <head>
      <meta charset="utf-8" />
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@300;400;600;700;800&family=Sofia+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
      
      <style>
        :root {
          /* Colores de Alta Cocina Andina: Burdeos, Cobre/Dorado, Antracita */
          --primary-color: #5d1a1f; /* Burdeos Oscuro / Vino Tinto */
          --secondary-color: #8a2a30; /* Burdeos Medio */
          --accent-color: #c9a37e; /* Cobre Quemado / Dorado Mate */
          --text-dark: #222222; /* Antracita Profundo */
          --text-light: #555555;
          --bg-light: #f5f5f5; /* Un blanco roto suave */
        }
        body {
          font-family: 'Sofia Sans', sans-serif;
          color: var(--text-dark);
        }
        h1, h2, h3 {
          font-family: 'Exo 2', sans-serif;
        }
        
        /* Efecto Sutil para el fondo del Hero (Parallax con fixed) */
        .hero-bg {
          background-image: url('/fondo-andino-textura.jpg'); /* Sugiere una imagen de textura sutil */
          background-size: cover;
          background-position: center;
          position: fixed; /* Opcional: Para un parallax simple */
          top: 0; left: 0; right: 0; bottom: 0;
          z-index: -1;
        }
        
        /* Estilo para el círculo del logo con un toque andino */
        .logo-circle {
          background: var(--accent-color);
          box-shadow: 0 0 0 10px rgba(201, 163, 126, 0.5); /* Sombra suave para destacar */
          /* Patrón andino sutil en el borde (solo si se implementa un SVG real) */
        }
      </style>
    </head>
    
    <body class="bg-white text-[var(--text-dark)] antialiased">
      <!-- Hero con navbar integrado solo en pantallas grandes -->
      <section class="relative min-h-[60vh] md:min-h-[80vh] flex items-center overflow-hidden" style="background: linear-gradient(135deg, #c9a37e 0%, #f5f5dc 50%, #faf0e6 100%);">
        <div class="absolute inset-0 opacity-10 bg-repeat" style="background-image: url('/congreso/pattern-bg.png'); background-size: auto; background-repeat: repeat;"></div>
        
        <nav class="hidden md:block md:absolute md:top-0 w-full z-20 pt-6">
          <ul class="flex justify-center space-x-8 items-center container mx-auto px-6">
            <li><a href="#inicio" class="text-lg font-light hover:text-[var(--accent-color)] transition duration-300" style="color: white;">Inicio</a></li>
            <li><a href="#about" class="text-lg font-light hover:text-[var(--accent-color)] transition duration-300" style="color: white;">Sobre el Congreso</a></li>
            <li><a href="#programa" class="text-lg font-light hover:text-[var(--accent-color)] transition duration-300" style="color: white;">Programa</a></li>
            <li><a href="#ponentes" class="text-lg font-light hover:text-[var(--accent-color)] transition duration-300" style="color: white;">Ponentes</a></li>
            <li><a href="#inscripcion" class="text-lg font-light hover:text-[var(--accent-color)] transition duration-300" style="color: white;">Inscripción</a></li>
          </ul>
        </nav>
      
        <div class="container mx-auto px-6 py-24 md:py-12 md:pt-20 text-center relative z-10">
          
          <div class="w-80 h-80 md:w-[36rem] md:h-[36rem] mx-auto mb-8 md:mb-12 flex items-center justify-center transition-all duration-500 hover:scale-[1.05]">
            <img src="/congreso/logo-congreso.png" alt="Logo Congreso" class="w-full h-full object-contain object-center" />
          </div>
                    
          <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-8 mb-12">
            <p class="text-2xl md:text-3xl font-semibold font-sans" style="color: #95323b;">14 y 15 de Noviembre de 2025</p>
            
            <!-- SVG decorativo como divisor vertical, referenciado externamente y escalado pequeño -->
            <img src="/congreso/forma1.svg" 
                 alt="" 
                 class="hidden md:inline-block w-1.5 h-16 mx-2 opacity-70" 
                 style="filter: brightness(0.4) sepia(1) saturate(5) hue-rotate(340deg); /* Ajusta el color a ~#712428; prueba en navegador para refinar */" />
            
            <p class="text-xl md:text-2xl font-light font-sans" style="color: #712428;">Casa de la Cultura, Oruro, Bolivia</p>
          </div>
          
          <a href="#inscripcion" class="bg-[var(--accent-color)] text-[var(--primary-color)] px-10 py-4 md:px-12 md:py-5 rounded-full font-bold text-xl md:text-2xl uppercase shadow-xl hover:bg-opacity-90 transition duration-300 transform hover:-translate-y-1 inline-block border-2 border-[var(--accent-color)] hover:border-opacity-80">
            Asegura tu cupo Ahora
          </a>
        </div>
      </section>

      <section id="about" class="relative py-24 bg-white">
        <!-- Elemento decorativo SVG a la derecha, con tamaño ajustado para ser más grande sin overflow -->
        <img src="/congreso/forma1.svg" alt="" class="absolute top-1/2 right-4 transform -translate-y-1/2 hidden md:block opacity-20 w-64 h-auto max-h-[80vh] object-contain pointer-events-none" />
        
        <div class="container mx-auto px-6">
          <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-[var(--secondary-color)] relative z-10">
            <!-- SVG decorativo posicionado arriba del texto, centrado y rotado -->
            <img src="/congreso/forma1.svg" 
                 alt="" 
                 class="absolute top-[-60px] left-1/2 transform -translate-x-1/2 rotate-90 w-24 h-24 md:w-32 md:h-32 z-20" />
            
            <span class="relative z-30 inline-block pt-12">
              Misión: <b>Fusión de Sabores y Saberes</b> 
            </span>
          </h2>
          <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-12 items-center text-lg leading-relaxed">
            <div>
              <p class="mb-4">El I Congreso es la plataforma académica líder para la profesionalización de la gastronomía boliviana. Nuestro enfoque central es la "Gastronomía de Altura", una filosofía que integra la riqueza ancestral andina con la <b>innovación científica y tecnológica</b>.</p>
              <p class="mb-4 font-semibold text-[var(--secondary-color)]">Un evento clave organizado por UNIOR - Carrera de Gastronomía, Turismo y Hotelería.</p>
              <p>Reunimos a la vanguardia: <b>Chefs Estrellas, Ph.D. Investigadores, Académicos y Emprendedores</b> que están redefiniendo la cocina en Bolivia y el mundo.</p>
            </div>
            <div class="relative min-h-[300px] bg-[var(--bg-light)] rounded-xl shadow-xl overflow-hidden" 
                style="
                    background-image: url('/congreso/image1.webp');
                    background-size: cover;
                    background-position: center;
                    background-repeat: no-repeat;
                ">
                <blockquote class="p-8 italic text-xl text-center text-white bg-black/60 border-l-4 border-[var(--accent-color)] h-full flex items-center">
                    "Elevando los ingredientes de la Tierra al plato de la Alta Cocina."
                </blockquote>
            </div>
          </div>
        </div>
      </section>
      <section class="py-24 bg-[var(--bg-light)]">
        <div class="container mx-auto px-6">
          <h2 class="text-4xl font-bold text-center mb-16 text-[var(--secondary-color)]">
            Ejes Temáticos Centrales
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="bg-white p-6 rounded-xl text-center shadow-lg hover:shadow-2xl hover:scale-[1.03] transition duration-300 border-b-4 border-[var(--accent-color)]">
              <span class="text-4xl mb-4 inline-block text-[var(--secondary-color)]">🌱</span>
              <h3 class="text-xl font-extrabold mb-3 text-[var(--primary-color)]">Ciencia y Sostenibilidad Alimentaria Andina</h3>
              <p class="text-sm text-[var(--text-light)]">Prácticas de cultivo, biotecnología y el futuro sostenible de los superalimentos nativos.</p>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-lg hover:shadow-2xl hover:scale-[1.03] transition duration-300 border-b-4 border-[var(--accent-color)]">
              <span class="text-4xl mb-4 inline-block text-[var(--secondary-color)]">🦙</span>
              <h3 class="text-xl font-extrabold mb-3 text-[var(--primary-color)]">Innovación Culinaria y Camélidos Andinos</h3>
              <p class="text-sm text-[var(--text-light)]">Técnicas de alta cocina aplicadas a la carne de llama, alpaca y otros productos únicos de altura.</p>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-lg hover:shadow-2xl hover:scale-[1.03] transition duration-300 border-b-4 border-[var(--accent-color)]">
              <span class="text-4xl mb-4 inline-block text-[var(--secondary-color)]">📈</span>
              <h3 class="text-xl font-extrabold mb-3 text-[var(--primary-color)]">Gestión, Tecnología y Modelos de Negocio</h3>
              <p class="text-sm text-[var(--text-light)]">Digitalización, rentabilidad, y las herramientas de gestión para restaurantes de clase mundial.</p>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-lg hover:shadow-2xl hover:scale-[1.03] transition duration-300 border-b-4 border-[var(--accent-color)]">
              <span class="text-4xl mb-4 inline-block text-[var(--secondary-color)]">🏺</span>
              <h3 class="text-xl font-extrabold mb-3 text-[var(--primary-color)]">Patrimonio y Antropología Culinaria</h3>
              <p class="text-sm text-[var(--text-light)]">El valor histórico y cultural de la cocina boliviana, desde las técnicas hasta los rituales ancestrales.</p>
            </div>
          </div>
        </div>
      </section>

      <section id="programa" class="py-24 bg-white">
        <div class="container mx-auto px-6">
          <h2 class="text-4xl font-bold text-center mb-16 text-[var(--secondary-color)]">
            Programa y Agenda
          </h2>
          <div class="max-w-4xl mx-auto space-y-12">
            
            <div class="text-center">
              <span class="text-2xl font-extrabold text-[var(--accent-color)] border-b-2 border-dotted border-[var(--accent-color)] pb-1">DÍA 1</span>
            </div>
            <div class="relative border-l-4 border-[var(--accent-color)] pl-6 md:pl-12">
              <div class="absolute w-4 h-4 bg-[var(--secondary-color)] rounded-full -left-2 top-0 transform -translate-x-1/2"></div>
              <h3 class="text-3xl font-extrabold mb-6 text-[var(--secondary-color)] bg-white inline-block pr-4">Viernes 14 de Noviembre</h3>
              <div class="space-y-6 text-lg">
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">08:00 - 09:00</span>
                  <span class="font-medium">Registro y Acreditación de Participantes</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">09:00 - 09:30</span>
                  <span class="font-medium">Ceremonia de Inauguración y Palabras de Bienvenida</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">09:30 - 10:30</span>
                  <span class="font-bold text-[var(--secondary-color)]">Ponencia Magistral 1: Ph.D. Dennis Ricaldi (Bolivia)</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">11:00 - 12:30</span>
                  <span class="font-medium">Mesas Redondas Simultáneas: Foco en Ejes Temáticos</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">14:00 - 16:00</span>
                  <span class="font-medium">Talleres Prácticos (Cocina de Altura y Gestión de Costos)</span>
                </div>
              </div>
            </div>

            <div class="text-center">
                <span class="text-2xl font-extrabold text-[var(--accent-color)] border-b-2 border-dotted border-[var(--accent-color)] pb-1">DÍA 2</span>
            </div>

            <div class="relative border-l-4 border-[var(--accent-color)] pl-6 md:pl-12">
              <div class="absolute w-4 h-4 bg-[var(--secondary-color)] rounded-full -left-2 top-0 transform -translate-x-1/2"></div>
              <h3 class="text-3xl font-extrabold mb-6 text-[var(--secondary-color)] bg-white inline-block pr-4">Sábado 15 de Noviembre</h3>
              <div class="space-y-6 text-lg">
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">09:00 - 10:00</span>
                  <span class="font-bold text-[var(--secondary-color)]">Ponencia Magistral 5: Ph.D. Magda Choquevillca (Argentina)</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">10:30 - 12:00</span>
                  <span class="font-medium">Panel de Chefs Nacionales (Historias de Éxito y Desafíos)</span>
                </div>
                <div class="p-4 bg-[var(--bg-light)] rounded-lg shadow-md hover:shadow-lg transition duration-200 flex justify-between">
                  <span class="font-bold text-[var(--primary-color)]">14:00 - 16:00</span>
                  <span class="font-medium">Clausura, Entrega de Certificados y Sesión de Networking</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section id="ponentes" class="relative py-24 bg-[var(--bg-light)] overflow-hidden">
        <!-- Patrón sutil para resaltar la sección -->
        <div class="absolute inset-0 opacity-10 bg-repeat" style="background-image: url('/congreso/pattern-bg.png'); background-size: 200px 200px; background-repeat: repeat;"></div>
        
        <div class="container mx-auto px-6 relative z-10">
          <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-[var(--secondary-color)] relative z-10">
            <!-- SVG decorativo posicionado arriba del texto, centrado y rotado -->
            <img src="/congreso/forma1.svg" 
                 alt="" 
                 class="absolute top-[-60px] left-1/2 transform -translate-x-1/2 rotate-90 w-24 h-24 md:w-32 md:h-32 z-20" />
            
            <span class="relative z-30 inline-block pt-12">
              Conoce a nuestros Expositores Internacionales y Nacionales
            </span>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Ponente 1: Internacional Argentina -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/magada-choque.webp" alt="Ph.D. Magda Choquevillca" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--accent-color)] text-xs font-semibold text-white rounded-full shadow-lg">Internacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Ph.D. Magda Choque Vilca</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Investigadora Gastronómica</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>Argentina</span>
                  <img src="/congreso/flags/ar.svg" alt="Bandera Argentina" class="w-4 h-3" /> <!-- Asumir imágenes de banderas en SVG para compatibilidad -->
                </p>
              </div>
            </div>
            
            <!-- Ponente 2: Internacional Argentina/Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/dennis-ricaldi.webp" 
                     alt="Ph.D. Dennis Ricaldi" 
                     class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" 
                     style="object-position: center 20%;" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--accent-color)] text-xs font-semibold text-white rounded-full shadow-lg">Internacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Ph.D. Dennis Ricaldi</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Biotecnología Alimentaria</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>Argentina / Bolivia</span>
                  <img src="/congreso/flags/ar.svg" alt="Bandera Argentina" class="w-4 h-3" />
                  <img src="/congreso/flags/bo.svg" alt="Bandera Bolivia" class="w-4 h-3" />
                </p>
              </div>
            </div>
      
            <!-- Ponente 3: Nacional Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/kenzo-hirose.webp" alt="Chef Kenzo Hirose" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" style="object-position: center 20%;" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--primary-color)] text-xs font-semibold text-white rounded-full shadow-lg">Nacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Chef Kenzo Hirose</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Chef Principal, Gustu</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>La Paz</span>
                  <img src="/congreso/flags/bo.svg" alt="Bandera Bolivia" class="w-4 h-3" />
                </p>
              </div>
            </div>
            
            <!-- Ponente 4: Nacional Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/fernando-catalan.webp" alt="Chef Fernando Catalan" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" style="object-position: center 10%;" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--primary-color)] text-xs font-semibold text-white rounded-full shadow-lg">Nacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Chef Fernando Catalan</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Universidad de Investigación y Desarrollo (UDI)</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>Cochabamba</span>
                  <img src="/congreso/flags/bo.svg" alt="Bandera Bolivia" class="w-4 h-3" />
                  <img src="/congreso/flags/es.svg" alt="Bandera España" class="w-4 h-3" />
                </p>
              </div>
            </div>
      
            <!-- Ponente 5: Nacional Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/jaime-barbas.webp" alt="Chef Jaime Barbas" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" style="object-position: center 30%;" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--primary-color)] text-xs font-semibold text-white rounded-full shadow-lg">Nacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Chef Jaime Barbas</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Chef Principal, Sacha Huasca</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>Santa Cruz</span>
                  <img src="/congreso/flags/bo.svg" alt="Bandera Bolivia" class="w-4 h-3" />
                </p>
              </div>
            </div>
      
            <!-- Ponente 6: Nacional Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/santos-coaquira.webp" alt="Chef Santos Coaquira" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" style="object-position: center 10%;"/>
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--primary-color)] text-xs font-semibold text-white rounded-full shadow-lg">Nacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Chef Santos Coaquira</h3>
                <p class="text-sm font-semibold text-[var(--secondary-color)] mb-3">Pasionaria by Santos</p>
                <p class="text-xs text-[var(--text-light)] italic flex items-center justify-center space-x-1">
                  <span>Santa Cruz</span>
                  <img src="/congreso/flags/bo.svg" alt="Bandera Bolivia" class="w-4 h-3" />
                </p>
              </div>
            </div>
      
            <!-- Ponente 7: Nacional Bolivia -->
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <img src="/congreso/juan-gumiel.webp" alt="Chef Juan Pablo Gumiel" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" style="object-position: center 20%;" />
                <div class="absolute bottom-3 left-3 right-3">
                  <span class="inline-block px-3 py-1 bg-[var(--primary-color)] text-xs font-semibold text-white rounded-full shadow-lg">Nacional</span>
                </div>
              </div>
              <div class="p-6 text-center">
                <h3 class="text-2xl font-extrabold text-[var(--primary-color)] mb-2 leading-tight">Chef Juan Pablo Gumiel</h3>
