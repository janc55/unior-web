---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


const mision = "Nuestro principal objetivo es formar profesionales competitivos con alta calidad académica, que tengan cualidades y atributos de liderazgo, sólidos principios y valores; promoviendo la investigación científica y logrando una profunda interacción social sustentada en los valores étnico culturales, contribuyendo a la conservación del medio ambiente, desarrollo social y económico del país.";

const vision = "Ser la universidad más importante y representativa a nivel nacional, con gran capacidad de liderazgo, reconocida y enraizada en la sociedad orureña por su contribución en la formación de profesionales competitivos, capaces de participar en forma activa y decisiva en el desarrollo científico, tecnológico, económico y cultural.";

const filosofia = "La filosofía de la universidad se basa en los principios del conocimiento científico, la justicia la disciplina, como valores institucionales; la lealtad, el amor y el respeto a la institución como valores humanos.";

const valoresInstitucionales = [
  { nombre: "Ética", descripcion: "Actuamos con integridad y transparencia.", icono: "mdi:hand-heart" },
  { nombre: "Responsabilidad", descripcion: "Asumimos nuestras acciones y cumplimos con nuestros compromisos.", icono: "mdi:check-circle" },
  { nombre: "Honestidad", descripcion: "Nos conducimos con verdad y rectitud en todo momento.", icono: "mdi:shield-check" },
  { nombre: "Proactividad", descripcion: "Tomamos la iniciativa para alcanzar objetivos con eficiencia.", icono: "mdi:run" },
  { nombre: "Equidad", descripcion: "Promovemos la justicia e igualdad de oportunidades para todos.", icono: "mdi:scale-balance" },
  { nombre: "Respeto", descripcion: "Valoramos y reconocemos la dignidad de todas las personas.", icono: "mdi:handshake" },
  { nombre: "Solidaridad", descripcion: "Apoyamos a nuestra comunidad y fomentamos el trabajo conjunto.", icono: "mdi:account-heart" },
  { nombre: "Excelencia Académica", descripcion: "Aspiramos a lograr los más altos estándares en formación educativa.", icono: "mdi:school" }
];

const mensajeRectora = {
  nombre: "Ph.D. María del Carmen Böhrt Cortés",
  cargo: "Rectora de la Universidad Privada de Oruro",
  mensaje: "En UNIOR, estamos comprometidos con la formación integral de nuestros estudiantes, preparándolos no solo académicamente, sino también como ciudadanos éticos y líderes innovadores. Nuestra visión es ser catalizadores del cambio positivo en nuestra sociedad, a través de la educación de calidad, la investigación de vanguardia y el compromiso con nuestra comunidad. Los invito a ser parte de esta emocionante jornada de crecimiento y descubrimiento en UNIOR.",
  imagen: "/rectora-unior.webp"
};

const historia = [
  {
    year: "1999",
    event: "Fundación de la Universidad Privada de Oruro.",
    description: "Se funda la Universidad Privada de Oruro con el objetivo de ofrecer educación de calidad y formar profesionales con valores éticos, excelencia académica e innovación, contribuyendo al desarrollo de la región."
  },
  {
    year: "2000",
    event: "Inicio académico de Administración de Empresas, Auditoría, Ingeniería de Sistemas y Derecho.",
    description: "Comienza el primer ciclo académico con las carreras pioneras, marcando el inicio de un camino educativo enfocado en formar líderes en el ámbito empresarial, tecnológico y jurídico."
  },
  {
    year: "2003",
    event: "Apertura de la carrera de Odontología.",
    description: "Se inaugura la carrera de Odontología, equipada con tecnología moderna y un enfoque integral para formar profesionales altamente capacitados en el área de la salud dental."
  },
  {
    year: "2003",
    event: "Primera versión del Premio Orgullo Orureño.",
    description: "La Universidad lanza el Premio Orgullo Orureño, reconociendo a personas e instituciones destacadas que han contribuido al desarrollo cultural, social y académico de Oruro."
  },
  {
    year: "2009",
    event: "Inicio de las carreras de Medicina y Enfermería (TS).",
    description: "Se abren las carreras de Medicina y Enfermería (Técnico Superior), enfocadas en satisfacer la creciente demanda de profesionales en el área de la salud en la región y el país."
  },
  {
    year: "2009",
    event: "Reconocimiento 'Mérito Educativo' por entidades municipales y educativas de Oruro.",
    description: "La Universidad recibe un reconocimiento por su aporte significativo a la educación y su compromiso con el desarrollo académico y social en la región."
  },
  {
    year: "2009",
    event: "Certificado por su aporte a la cultura otorgado por instituciones culturales y turísticas.",
    description: "Se otorga un certificado destacando el impacto cultural de la universidad en Oruro, a través de iniciativas que promueven la identidad y el patrimonio local."
  },
  {
    year: "2016",
    event: "Inauguración del segundo edificio UNIOR.",
    description: "Con el fin de expandir su infraestructura y mejorar las condiciones académicas, se inaugura el segundo edificio, proporcionando instalaciones modernas y espacios óptimos para el aprendizaje."
  },
  {
    year: "2018",
    event: "Inicio académico de Gastronomía, Turismo y Hotelería.",
    description: "La Universidad introduce esta carrera, dirigida a formar profesionales en sectores clave para el desarrollo económico y cultural de la región y del país."
  },
  {
    year: "2019",
    event: "Inicio de la Licenciatura en Enfermería.",
    description: "La Licenciatura en Enfermería comienza a ofrecerse, fortaleciendo la formación de profesionales de la salud con un enfoque humanista y ético."
  },
  {
    year: "2023",
    event: "Acreditación al Mercosur Educativo (Odontología).",
    description: "La carrera de Odontología alcanza la acreditación al Mercosur Educativo, garantizando estándares internacionales de calidad en la formación de sus estudiantes."
  },
  {
    year: "2024",
    event: "Celebración del 25º aniversario de la Universidad Privada de Oruro.",
    description: "Este año celebramos con orgullo 25 años de trayectoria formando profesionales éticos, innovadores y comprometidos con el desarrollo de la sociedad. Un cuarto de siglo que refleja nuestra dedicación a la excelencia educativa."
  }
];

---

<Layout title="Sobre UNIOR - Universidad Privada de Oruro">
  <Header isHero={false}/>
  <main class="bg-gray-50">
    

    <!-- Misión y Visión -->
    <section class="py-16">
      <div class="container max-w-[1440px] mx-auto px-4">
        <div class="grid md:grid-cols-2">
          <div class="relative w-full h-full hidden md:block">
            <img
              src="/image2.png"
              alt="imagen 2"
              class="absolute inset-0 w-full h-full object-cover rounded-none"
              loading="lazy"
            />
          </div>
          <div>
            <div class="relative bg-white border-2 border-gray-300 shadow-md p-6 rounded-lg max-w-lg mx-auto">
              <!-- Escudo en marca de agua -->
              <div class="absolute inset-y-0 right-0 opacity-10 w-1/2 h-full bg-no-repeat bg-left-bottom">
                <Image
                src="/logo-unior-ani.svg"
                alt={mensajeRectora.nombre}
                width={300}
                height={300}
                class="rounded-full"
                
              />
              </div>
              
              <!-- Header con ícono y título -->
              <div class="flex items-center mb-4 relative z-10">
                <div class="bg-red-600 text-white p-2 rounded-full">
                  <Icon name="mdi:target" class="w-6 h-6"/>
                </div>
                <h2 class="text-red-600 text-2xl font-bold ml-3">MISIÓN</h2>
              </div>
            
              <!-- Texto de la misión -->
              <p class="text-gray-700 leading-relaxed relative z-10">
                {mision}
              </p>
            </div>
            <div class="relative mt-4 bg-white border-2 border-gray-300 shadow-md p-6 rounded-lg max-w-lg mx-auto">
              <!-- Escudo en marca de agua -->
              <div class="absolute inset-y-0 right-0 opacity-10 w-1/2 h-full bg-no-repeat bg-left-bottom">
                <Image
                src="/logo-unior-ani.svg"
                alt={mensajeRectora.nombre}
                width={300}
                height={300}
                class="rounded-full"
                
              />
              </div>
              
              <!-- Header con ícono y título -->
              <div class="flex items-center mb-4 relative z-10">
                <div class="bg-red-600 text-white p-2 rounded-full">
                  <Icon name="mdi:eye" class="w-6 h-6"/>
                </div>
                <h2 class="text-red-600 text-2xl font-bold ml-3">VISIÓN</h2>
              </div>
            
              <!-- Texto de la misión -->
              <p class="text-gray-700 leading-relaxed relative z-10">
                {vision}
              </p>
            </div>
            <div class="relative mt-4 bg-white border-2 border-gray-300 shadow-md p-6 rounded-lg max-w-lg mx-auto">
              <!-- Escudo en marca de agua -->
              <div class="absolute inset-y-0 right-0 opacity-10 w-1/2 h-full bg-no-repeat bg-left-bottom">
                <Image
                src="/logo-unior-ani.svg"
                alt={mensajeRectora.nombre}
                width={300}
                height={300}
                class="rounded-full"
                
              />
              </div>
              
              <!-- Header con ícono y título -->
              <div class="flex items-center mb-4 relative z-10">
                <div class="bg-red-600 text-white p-2 rounded-full">
                  <Icon name="mdi:lightbulb-outline" class="w-6 h-6"/>
                </div>
                <h2 class="text-red-600 text-2xl font-bold ml-3">FILOSOFÍA</h2>
              </div>
            
              <!-- Texto de la misión -->
              <p class="text-gray-700 leading-relaxed relative z-10">
                {filosofia}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Valores Institucionales -->
    <section class="py-16">
      <div class="container max-w-[1440px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary animate-fade-in-down">Valores Institucionales</h2>
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {valoresInstitucionales.map((valor, index) => (
            <div class={`rounded-lg bg-white p-6 shadow-lg transition-all duration-300 hover:shadow-xl animate-fade-in-up`} style={`animation-delay: ${index * 100}ms`}>
              <Icon name={valor.icono} class="mb-4 h-12 w-12 text-primary" />
              <h3 class="mb-2 text-xl font-semibold text-gray-800">{valor.nombre}</h3>
              <p class="text-gray-600">{valor.descripcion}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Mensaje de la Rectora -->
    <section class="bg-gray-100 py-16">
      <div class="container max-w-[1440px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary animate-fade-in-down">Mensaje de la Rectora</h2>
        <div class="flex flex-col items-center rounded-lg bg-white p-8 shadow-lg md:flex-row animate-fade-in-up">
          <div class="mb-6 md:mb-0 md:w-1/3">
            <Image
              src={mensajeRectora.imagen}
              alt={mensajeRectora.nombre}
              width={300}
              height={300}
              class="rounded-full"
            />
          </div>
          <div class="md:w-2/3 md:pl-8">
            <blockquote class="mb-4 text-gray-700">"{mensajeRectora.mensaje}"</blockquote>
            <p class="font-semibold text-primary">{mensajeRectora.nombre}</p>
            <p class="text-gray-600">{mensajeRectora.cargo}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Historia Timeline -->
    <section class="py-16">
      <div class="container max-w-[1080px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary animate-fade-in-down">Nuestra Historia</h2>
        <div class="relative">
          <!-- Línea central -->
          <div class="absolute left-1/2 h-full w-1 -translate-x-1/2 transform bg-primary"></div>
          <div class="space-y-12">
            {historia.map((item, index) => (
              <div
                class={`relative flex items-center ${index % 2 === 0 ? 'flex-row-reverse' : 'flex-row'} animate-fade-in`}
                style={`animation-delay: ${index * 200}ms`}
              >
                <!-- Contenedor del contenido -->
                <div class="w-1/2 px-8">
                  <div class="rounded-lg bg-white p-4 shadow-lg">
                    <h3 class="text-2xl font-semibold text-primary">{item.year}</h3>
                    <p class="text-xl text-gray-700">{item.event}</p>
                    <p class="text-gray-500">{item.description}</p>
                  </div>
                </div>
                <!-- Punto central -->
                <div class="absolute left-1/2 -ml-2 h-4 w-4 -translate-x-1/2 transform rounded-full bg-primary"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

  </main>
  <Footer/>
</Layout>

<style>
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translate3d(0, -20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translate3d(-20px, 0, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translate3d(20px, 0, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-fade-in-down {
    animation: fadeInDown 1s ease-out;
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out;
  }

  .animate-fade-in-left {
    animation: fadeInLeft 1s ease-out;
  }

  .animate-fade-in-right {
    animation: fadeInRight 1s ease-out;
  }

  [astro-icon] {
    color: var(--color-primary);
  }
</style>