---
// src/pages/carreras/[slug].astro

// Asegúrate de tener el adaptador correcto si usas uno
import HeaderCarreras from '../../components/HeaderCarreras.astro';
import { careers } from '../../data/carreras/index.js';
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// Obtener el parámetro 'slug' de la ruta
const { slug } = Astro.params;

// Definir getStaticPaths sin importar desde ningún lugar
export async function getStaticPaths() {
  return careers.map(carrera => ({
    params: { slug: carrera.slug },
  }));
}

// Buscar la carrera correspondiente
const career = careers.find(c => c.slug === slug);

// Manejar el caso donde no se encuentra la carrera
if (!career) {
  // Puedes redirigir o mostrar una página 404 personalizada
  throw new Error(`Carrera con slug '${slug}' no encontrada.`);
}
---

<Layout title={`${career.title} - Universidad Privada de Oruro`}>
    <main class="text-text-light">
      <HeaderCarreras/>
      <!-- Hero Section -->
      <section class="relative h-[80vh] overflow-hidden">
        <div class="absolute inset-0 z-0">
          <div class="relative h-full w-full">
            <video 
              class="h-full w-full object-cover"
              autoplay 
              loop 
              muted 
              playsinline
            >
              <source src={career.video} type="video/mp4" />
            </video>
            <div class="absolute inset-0 bg-black/50"></div>
            <div class="absolute inset-0 bg-primary/30 mix-blend-multiply"></div>
          </div>
        </div>
        <div class="relative z-10 flex h-full items-center justify-center px-4 text-center">
          <div>
            <h1 class="mb-4 text-5xl text-neutral-100 font-bold leading-tight md:text-6xl">{career.title}</h1>
            <p class="mx-auto max-w-2xl text-xl text-gray-300">{career.description}</p>
          </div>
        </div>
      </section>
  
      <!-- Career Details Bento Grid -->
      <section class="py-16 bg-neutral-50">
        <div class="container mx-auto max-w-[1440px] px-4">
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            <!-- Overview Card -->
            <div class="col-span-full rounded-3xl bg-neutral-100 p-8 shadow-lg lg:col-span-2">
              <h2 class="mb-6 text-3xl font-bold text-primary-light">Visión General</h2>
              <ul class="grid gap-4 sm:grid-cols-2">
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:clock-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Duración:</strong> {career.duration}</span>
                </li>
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:school-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Grado:</strong> {career.degree}</span>
                </li>
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:book-open-page-variant-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Modalidad:</strong> {career.modality}</span>
                </li>
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:certificate-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Créditos:</strong> {career.credits}</span>
                </li>
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:account-tie-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Coordinador:</strong> {career.coordinator}</span>
                </li>
                <li class="flex items-center space-x-2">
                  <Icon name="mdi:shield-check-outline" class="h-6 w-6 text-primary-light" />
                  <span><strong>Acreditación:</strong> {career.accreditation}</span>
                </li>
              </ul>
            </div>
            
            <!-- CTA Card -->
            <div class="rounded-3xl bg-primary p-8 text-center shadow-lg">
              <h2 class="mb-4 text-2xl text-neutral-100 font-bold">¿Listo para el futuro?</h2>
              <p class="mb-6 text-neutral-100">Inicia tu carrera en Ingeniería de Sistemas y sé parte de la revolución tecnológica.</p>
              <a href="/admisiones" class="inline-block rounded-full bg-white px-6 py-3 font-semibold text-primary transition-all hover:bg-gray-200">
                Postula Ahora
              </a>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Curriculum Section -->
      <section class="bg-neutral-50 py-16">
        <div class="container mx-auto max-w-[1440px] px-4">
          <h2 class="mb-8 text-center text-3xl font-bold text-accent-dark">Plan de Estudios</h2>
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {career.curriculum.map((year) => (
              <div class="rounded-xl bg-neutral-100 p-6 shadow-md transition-all hover:shadow-lg hover:shadow-primary/20">
                <h3 class="mb-4 text-xl font-semibold text-primary">{year.year}</h3>
                <ul class="list-inside list-disc space-y-2">
                  {year.courses.map((course) => (
                    <li>{course}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>
  
      <!-- Job Opportunities Section -->
      <section class="bg-neutral-50 py-16">
        <div class="container mx-auto max-w-[1440px] px-4">
          <h2 class="mb-8 text-center text-3xl font-bold text-accent-dark">Oportunidades Laborales</h2>
          <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            {career.jobOpportunities.map((job) => (
              <div class="rounded-lg bg-neutral-100 p-4 text-center shadow-md transition-all hover:shadow-lg hover:shadow-primary-light/20">
                <Icon name="mdi:briefcase-outline" class="mx-auto mb-2 h-8 w-8 text-primary-light" />
                <p>{job}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
  
      <!-- Testimonial Section -->
      <section class=" bg-neutral-50 py-16">
        <div class="container mx-auto max-w-[1440px] px-4">
          <h2 class="mb-8 text-center text-3xl font-bold text-accent-dark">Lo que dicen nuestros estudiantes</h2>
          <div class="mx-auto max-w-3xl rounded-xl bg-neutral-50 p-8 shadow-lg">
            <blockquote class="mb-4 text-lg italic">
              "Estudiar Ingeniería de Sistemas en UNIOR ha sido una experiencia transformadora. Los profesores son expertos en sus campos y el plan de estudios está siempre actualizado con las últimas tecnologías."
            </blockquote>
            <div class="flex items-center">
              <img src="/placeholder.svg?height=50&width=50" alt="Foto de estudiante" class="mr-4 h-12 w-12 rounded-full" />
              <div>
                <p class="font-semibold">María Gómez</p>
                <p class="text-sm text-gray-400">Estudiante de 4to año</p>
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Contact Section -->
      <section class="mx-auto max-w-[1440px] py-16">
        <div class="container mx-auto px-4">
          <h2 class="mb-8 text-center text-3xl font-bold text-primary-light">¿Tienes preguntas?</h2>
          <div class="mx-auto max-w-2xl rounded-xl bg-neutral-50 p-8 shadow-lg">
            <p class="mb-6 text-center">Nuestro equipo está listo para ayudarte en tu camino hacia convertirte en un Ingeniero de Sistemas.</p>
            <div class="flex justify-center space-x-4">
              <a href="mailto:sistemas@unior.edu.bo" class="flex items-center space-x-2 rounded-full bg-primary px-6 py-3 font-semibold text-white transition-all hover:bg-primary/90">
                <Icon name="mdi:email-outline" class="h-5 w-5" />
                <span>Contáctanos</span>
              </a>
              <a href="/faq" class="flex items-center space-x-2 rounded-full border border-primary-light px-6 py-3 font-semibold text-primary-light transition-all hover:bg-primary-light hover:text-gray-900">
                <Icon name="mdi:frequently-asked-questions" class="h-5 w-5" />
                <span>FAQ</span>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
  </Layout>
  
  <style>
    [astro-icon] {
      width: 1em;
      height: 1em;
    }
  </style>
  
  <script>
    // Add any interactive features here
    document.addEventListener('astro:page-load', () => {
      const cards = document.querySelectorAll('.hover\\:shadow-lg');
      cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          card.classList.add('scale-105');
        });
        card.addEventListener('mouseleave', () => {
          card.classList.remove('scale-105');
        });
      });
    });
  </script>
