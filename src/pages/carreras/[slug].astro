              <a href="/admisiones" class="inline-block rounded-full bg-white px-6 py-3 font-semibold text-primary transition-all hover:bg-gray-200">
                Postula Ahora
              </a>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Curriculum Section -->
      <section class="bg-neutral-50 py-16">
        <div class="container mx-auto max-w-[1440px] px-4">
          <h2 class="mb-8 text-center text-3xl font-bold text-accent-dark">Plan de Estudios</h2>
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {career.curriculum.map((year) => (
              <div class="rounded-xl bg-neutral-100 p-6 shadow-md transition-all hover:shadow-lg hover:shadow-primary/20">
                <h3 class="mb-4 text-xl font-semibold text-primary">{year.year}</h3>
                <ul class="list-inside list-disc space-y-2">
                  {year.courses.map((course) => (
                    <li>{course}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Sección de Brochure -->
      <section class="relative bg-neutral-900 py-16 text-white">
        <div class="container mx-auto max-w-[1440px] px-4">
          <!-- Encabezado dinámico -->
