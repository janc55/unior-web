    <div class="pointer-events-none absolute top-1/4 left-1/3 h-64 w-64 rounded-full bg-primary-light/10 blur-2xl"></div>
    <div class="pointer-events-none absolute bottom-1/4 right-1/3 h-48 w-48 rounded-full bg-primary-dark/20 blur-2xl"></div>
  </div>
</section>


