---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const admissionSteps = [
  {
    title: "Elige tu carrera",
    description: "Explora nuestra oferta académica y encuentra la carrera que se ajuste a tus intereses y metas profesionales.",
    icon: "mdi:book-open-page-variant"
  },
  {
    title: "Prepara tus documentos",
    description: "Reúne los documentos necesarios: certificado de bachiller, documento de identidad, fotografías, etc.",
    icon: "mdi:file-document-multiple"
  },
  {
    title: "Completa el formulario",
    description: "Llena el formulario de admisión en línea con tus datos personales y académicos.",
    icon: "mdi:form-select"
  },
  {
    title: "Realiza el pago",
    description: "Efectúa el pago de la matrícula a través de nuestras opciones de pago en línea o presencial.",
    icon: "mdi:cash-check"
  },
  {
    title: "Confirmación",
    description: "Recibirás un correo de confirmación con los detalles de tu inscripción y próximos pasos.",
    icon: "mdi:email-check"
  }
];

const faqs = [
  {
    question: "¿Cuándo comienzan las inscripciones?",
    answer: "Las inscripciones para el próximo semestre comienzan el 1 de julio y finalizan el 15 de agosto."
  },
  {
    question: "¿Qué documentos necesito para inscribirme?",
    answer: "Necesitarás tu certificado de bachiller, documento de identidad, 4 fotografías tamaño carnet, y el comprobante de pago de la matrícula."
  },
  {
    question: "¿Ofrecen becas o ayuda financiera?",
    answer: "Sí, ofrecemos diversas becas por mérito académico, deportivo y necesidad económica. Consulta nuestra sección de becas para más información."
  },
  {
    question: "¿Puedo cambiar de carrera una vez inscrito?",
    answer: "Sí, es posible cambiar de carrera durante las primeras dos semanas del semestre, sujeto a disponibilidad de cupos."
  }
];
---

<Layout title="Admisiones - Universidad Privada de Oruro">
    <Header isHero={true}/>
    <main >
    <!-- Hero Section -->
    <section class="relative bg-primary py-20 text-white">
      <div class="container max-w-[1200px] mx-auto px-4 text-center">
        <h1 class="mb-4 text-4xl font-bold md:text-5xl lg:text-6xl animate-fade-in-down">Admisiones</h1>
        <p class="text-xl animate-fade-in-up">Tu futuro comienza aquí - Ingreso directo sin examen de admisión</p>
      </div>
      <div class="absolute bottom-0 left-0 right-0">
        <svg viewBox="0 0 1200 120" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 0L60 10C120 20 240 40 360 46.7C480 53 600 47 720 36.7C840 27 960 13 1080 16.3C1200 20 1320 40 1380 50L1200 60V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="currentColor"/>
        </svg>
      </div>
    </section>

    <!-- Proceso de Admisión -->
    <section class="py-4">
      <div class="container max-w-[1200px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary animate-fade-in-down">Proceso de Admisión</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {admissionSteps.map((step, index) => (
            <div class="rounded-lg bg-white p-6 shadow-lg transition-all duration-300 hover:shadow-xl animate-fade-in-up" style={`animation-delay: ${index * 100}ms`}>
              <div class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary text-white">
                <Icon name={step.icon} class="h-8 w-8" />
              </div>
              <h3 class="mb-2 text-xl font-semibold text-gray-800">{step.title}</h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gray-100 py-16">
      <div class="container max-w-[1200px] mx-auto px-4">
        <div class="rounded-lg bg-white p-8 shadow-lg md:flex md:items-center md:justify-between">
          <div class="mb-6 md:mb-0 md:w-2/3">
            <h2 class="mb-2 text-3xl font-bold text-primary">¿Listo para comenzar tu futuro?</h2>
            <p class="text-gray-600">Inicia tu proceso de admisión hoy mismo y sé parte de nuestra comunidad universitaria.</p>
          </div>
          <div class="md:w-1/3 md:text-right">
            <a href="#" class="inline-block rounded-full bg-primary px-8 py-3 text-lg font-semibold text-white transition-colors hover:bg-primary-dark">
              Inscríbete Ahora
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Preguntas Frecuentes -->
    <section class="py-16">
      <div class="container max-w-[1200px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary">Preguntas Frecuentes</h2>
        <div class="grid gap-6 md:grid-cols-2">
          {faqs.map((faq, index) => (
            <div class="rounded-lg bg-white p-6 shadow-lg animate-fade-in-up" style={`animation-delay: ${index * 100}ms`}>
              <h3 class="mb-2 text-xl font-semibold text-gray-800">{faq.question}</h3>
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contacto -->
    <section class="bg-gray-100 py-16">
      <div class="container max-w-[1200px] mx-auto px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-primary">¿Tienes más preguntas?</h2>
        <div class="rounded-lg bg-white p-8 shadow-lg md:flex md:items-center md:justify-between">
          <div class="mb-6 md:mb-0 md:w-2/3">
            <p class="text-gray-600">Nuestro equipo de admisiones está aquí para ayudarte en cada paso del proceso.</p>
          </div>
          <div class="md:w-1/3 md:text-right">
            <a href="#" class="inline-flex items-center rounded-full bg-primary px-6 py-3 text-lg font-semibold text-white transition-colors hover:bg-primary-dark">
              <Icon name="mdi:phone" class="mr-2 h-5 w-5" />
              Contáctanos
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translate3d(0, -20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-fade-in-down {
    animation: fadeInDown 1s ease-out;
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out;
  }

  [astro-icon] {
    color: currentColor;
  }
</style>