---
// src/pages/carreras/ingenieria-de-sistemas.astro
import Footer from '../components/Footer.astro';
import HeaderCarreras from '../components/HeaderCarreras.astro';
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const careerDetails = {
  title: "Ingeniería de Sistemas",
  description: "Forma profesionales capaces de diseñar, implementar y mantener sistemas de información y tecnologías innovadoras para resolver problemas complejos en diversos sectores.",
  duration: "5 años",
  degree: "Licenciatura",
  modality: "Presencial y Semipresencial",
  credits: 300,
  coordinator: "Dra. Ana Martínez",
  accreditation: "Acreditada por CEUB",
  image: "/placeholder.svg?height=600&width=800",
  video: "/video_unior2.mp4",
};

const curriculum = [
  { year: "Primer Año", courses: ["Introducción a la Programación", "Matemáticas Discretas", "Álgebra Lineal", "Cálculo I", "Física I"] },
  { year: "Segundo Año", courses: ["Estructuras de Datos", "Programación Orientada a Objetos", "Bases de Datos", "Arquitectura de Computadoras", "Cálculo II"] },
  { year: "Tercer Año", courses: ["Ingeniería de Software", "Redes de Computadoras", "Sistemas Operativos", "Inteligencia Artificial", "Estadística y Probabilidad"] },
  { year: "Cuarto Año", courses: ["Desarrollo Web", "Seguridad Informática", "Computación en la Nube", "Gestión de Proyectos", "Minería de Datos"] },
  { year: "Quinto Año", courses: ["Sistemas Distribuidos", "Ética en la Informática", "Emprendimiento Tecnológico", "Práctica Profesional", "Proyecto de Grado"] },
];

const jobOpportunities = [
  "Desarrollador de Software",
  "Arquitecto de Sistemas",
  "Analista de Datos",
  "Administrador de Redes",
  "Consultor en Tecnologías de la Información",
  "Gerente de Proyectos IT",
  "Especialista en Ciberseguridad",
  "Ingeniero DevOps",
];
---

<Layout title={`${careerDetails.title} - Universidad Privada de Oruro`}>
  <main class="bg-background-dark text-white">
    <HeaderCarreras/>
    <!-- Hero Section -->
    <section class="relative h-[80vh] overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="relative h-full w-full">
          <video 
            class="h-full w-full object-cover"
            autoplay 
            loop 
            muted 
            playsinline
          >
            <source src={careerDetails.video} type="video/mp4" />
          </video>
          <div class="absolute inset-0 bg-black/50"></div>
          <div class="absolute inset-0 bg-primary/30 mix-blend-multiply"></div>
        </div>
      </div>
      <div class="relative z-10 flex h-full items-center justify-center px-4 text-center">
        <div>
          <h1 class="mb-4 text-5xl font-bold leading-tight md:text-6xl">{careerDetails.title}</h1>
          <p class="mx-auto max-w-2xl text-xl text-gray-300">{careerDetails.description}</p>
        </div>
      </div>
    </section>

    <!-- Career Details Bento Grid -->
    <section class="py-16">
      <div class="container mx-auto max-w-[1440px] px-4">
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Overview Card -->
          <div class="col-span-full rounded-3xl bg-accent-dark p-8 shadow-lg lg:col-span-2">
            <h2 class="mb-6 text-3xl font-bold text-primary-light">Visión General</h2>
            <ul class="grid gap-4 sm:grid-cols-2">
              <li class="flex items-center space-x-2">
                <Icon name="mdi:clock-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Duración:</strong> {careerDetails.duration}</span>
              </li>
              <li class="flex items-center space-x-2">
                <Icon name="mdi:school-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Grado:</strong> {careerDetails.degree}</span>
              </li>
              <li class="flex items-center space-x-2">
                <Icon name="mdi:book-open-page-variant-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Modalidad:</strong> {careerDetails.modality}</span>
              </li>
              <li class="flex items-center space-x-2">
                <Icon name="mdi:certificate-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Créditos:</strong> {careerDetails.credits}</span>
              </li>
              <li class="flex items-center space-x-2">
                <Icon name="mdi:account-tie-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Coordinador:</strong> {careerDetails.coordinator}</span>
              </li>
              <li class="flex items-center space-x-2">
                <Icon name="mdi:shield-check-outline" class="h-6 w-6 text-primary-light" />
                <span><strong>Acreditación:</strong> {careerDetails.accreditation}</span>
              </li>
            </ul>
          </div>
          
          <!-- CTA Card -->
          <div class="rounded-3xl bg-primary p-8 text-center shadow-lg">
            <h2 class="mb-4 text-2xl font-bold">¿Listo para el futuro?</h2>
            <p class="mb-6">Inicia tu carrera en Ingeniería de Sistemas y sé parte de la revolución tecnológica.</p>
            <a href="/admisiones" class="inline-block rounded-full bg-white px-6 py-3 font-semibold text-primary transition-all hover:bg-gray-200">
              Postula Ahora
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Curriculum Section -->
    <section class="bg-accent-dark py-16">
      <div class="container mx-auto max-w-[1440px] px-4">
        <h2 class="mb-8 text-center text-3xl font-bold text-primary-light">Plan de Estudios</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {curriculum.map((year) => (
            <div class="rounded-xl bg-accent-light p-6 shadow-md transition-all hover:shadow-lg hover:shadow-primary-light/20">
              <h3 class="mb-4 text-xl font-semibold text-primary-light">{year.year}</h3>
              <ul class="list-inside list-disc space-y-2">
                {year.courses.map((course) => (
                  <li>{course}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Job Opportunities Section -->
    <section class="py-16">
      <div class="container mx-auto max-w-[1440px] px-4">
        <h2 class="mb-8 text-center text-3xl font-bold text-primary-light">Oportunidades Laborales</h2>
        <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
          {jobOpportunities.map((job) => (
            <div class="rounded-lg bg-accent-dark p-4 text-center shadow-md transition-all hover:shadow-lg hover:shadow-primary-light/20">
              <Icon name="mdi:briefcase-outline" class="mx-auto mb-2 h-8 w-8 text-primary-light" />
              <p>{job}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonial Section -->
    <section class=" bg-accent-dark py-16">
      <div class="container mx-auto max-w-[1440px] px-4">
        <h2 class="mb-8 text-center text-3xl font-bold text-primary-light">Lo que dicen nuestros estudiantes</h2>
        <div class="mx-auto max-w-3xl rounded-xl bg-accent-light p-8 shadow-lg">
          <blockquote class="mb-4 text-lg italic">
            "Estudiar Ingeniería de Sistemas en UNIOR ha sido una experiencia transformadora. Los profesores son expertos en sus campos y el plan de estudios está siempre actualizado con las últimas tecnologías."
          </blockquote>
          <div class="flex items-center">
            <img src="/placeholder.svg?height=50&width=50" alt="Foto de estudiante" class="mr-4 h-12 w-12 rounded-full" />
            <div>
              <p class="font-semibold">María Gómez</p>
              <p class="text-sm text-gray-400">Estudiante de 4to año</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="mx-auto max-w-[1440px] py-16">
      <div class="container mx-auto px-4">
        <h2 class="mb-8 text-center text-3xl font-bold text-primary-light">¿Tienes preguntas?</h2>
        <div class="mx-auto max-w-2xl rounded-xl bg-accent-dark p-8 shadow-lg">
          <p class="mb-6 text-center">Nuestro equipo está listo para ayudarte en tu camino hacia convertirte en un Ingeniero de Sistemas.</p>
          <div class="flex justify-center space-x-4">
            <a href="mailto:sistemas@unior.edu.bo" class="flex items-center space-x-2 rounded-full bg-primary px-6 py-3 font-semibold text-white transition-all hover:bg-primary/90">
              <Icon name="mdi:email-outline" class="h-5 w-5" />
              <span>Contáctanos</span>
            </a>
            <a href="/faq" class="flex items-center space-x-2 rounded-full border border-primary-light px-6 py-3 font-semibold text-primary-light transition-all hover:bg-primary-light hover:text-gray-900">
              <Icon name="mdi:frequently-asked-questions" class="h-5 w-5" />
              <span>FAQ</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  [astro-icon] {
    width: 1em;
    height: 1em;
  }
</style>

<script>
  // Add any interactive features here
  document.addEventListener('astro:page-load', () => {
    const cards = document.querySelectorAll('.hover\\:shadow-lg');
    cards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        card.classList.add('scale-105');
      });
      card.addEventListener('mouseleave', () => {
        card.classList.remove('scale-105');
      });
    });
  });
</script>